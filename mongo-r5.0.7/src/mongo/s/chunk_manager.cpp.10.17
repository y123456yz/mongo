}

//epoch必须相同，并且version版本号必须大于chunk对应版本号
void validateChunk(const std::shared_ptr<ChunkInfo>& chunk, const ChunkVersion& version) {
    uassert(ErrorCodes::ConflictingOperationInProgress,
            str::stream() << "Changed chunk " << chunk->toString()
                          << " has epoch different from that of the collection " << version.epoch(),
            version.epoch() == chunk->getLastmod().epoch());

    invariant(version.isOlderOrEqualThan(chunk->getLastmod()));
}

void ChunkMap::makeNew(const std::vector<std::shared_ptr<ChunkInfo>>& changedChunks) {
	std::shared_ptr<ChunkVector> vectorPtr;
	auto vectorCount = 0;
	std::string chunkMaxKeyString;
	
	
	for (const auto& chunk : changedChunks) {
		chunkMaxKeyString = chunk->getMaxKeyString();
		if (vectorCount == 0) {
			vectorPtr = std::make_shared<ChunkVector>();
			vectorPtr->reserve(MaxSizeSingleChunksMap); 
		}
		
		appendChunk(*vectorPtr, chunk);
		//updatedChunkMap.appendChunk(chunk);
		vectorCount++;
	
		if (vectorCount == MaxSizeSingleChunksMap) {
			_chunkMap.insert(std::make_pair(chunkMaxKeyString, vectorPtr));
			vectorCount = 0;
		}
	}
	
	//最后一个slot可能
	if (vectorCount < MaxSizeSingleChunksMap) {
		_chunkMap.insert(std::make_pair(chunkMaxKeyString, vectorPtr));
	}
	
	constructShardVersionMap(changedChunks);

	return;
}

void ChunkMap::makeUpdated(const MapChunkVector& oldChunkMap, 
	const std::vector<std::shared_ptr<ChunkInfo>>& changedChunks) {
	ChunkMap changeChunkMap(getVersion().epoch(), getVersion().getTimestamp());

	MapChunkVector& changeMCV = changeChunkMap.getMapChunkVector();

	LOGV2(227512,
	  "old chunk createMerged befor xx2: {changechunk}",
	  "old chunk createMerged befor xx2",
	  //ChunkManager::toString->RoutingTableHistory::toString
	  "changechunk"_attr = redact(this->toString()));
	
	for (const auto& chunk : changedChunks) {
		LOGV2(227512,
		  "old chunk createMerged 2: {changechunk}",
		  "old chunk createMerged 2",
		  //ChunkManager::toString->RoutingTableHistory::toString
		  "changechunk"_attr = (chunk->toString())); //ChunkInfo::toString
		const auto chunkMaxKeyString = chunk->getMaxKeyString();
		std::shared_ptr<ChunkVector> changeChunkVectorPtr;
		auto mapIndex = oldChunkMap.lower_bound(chunkMaxKeyString);
		if (mapIndex == oldChunkMap.end()) {
			invariant(false);//异常
		}

		auto iter = changeMCV.find(mapIndex->first);
		
        if (iter == changeMCV.end()) {
			changeChunkVectorPtr = std::make_shared<ChunkVector>();
			changeMCV.insert(std::make_pair(mapIndex->first, changeChunkVectorPtr));
			changeChunkVectorPtr->push_back(chunk);
        } else {
			changeChunkVectorPtr->push_back(chunk);
		}

		
		const auto& currentRangeShardId = chunk->getShardIdAt(boost::none);
		auto shardVersionIt = _shardVersions.find(currentRangeShardId);
		if (shardVersionIt == _shardVersions.end()) {
            shardVersionIt = _shardVersions
                                 .emplace(std::piecewise_construct,
                                          std::forward_as_tuple(currentRangeShardId),
                                          std::forward_as_tuple(_collectionVersion.epoch(),
                                                                _collectionVersion.getTimestamp()))
                                 .first;

			LOGV2(227512,
	          "not found shardid xx 1: {shardid}",
	          "not found shardid xx 1",
	          //ChunkManager::toString->RoutingTableHistory::toString
	          "shardid"_attr = str::stream() << currentRangeShardId);
		}
		/* 两个参数使用方式
		LOGV2_WARNING(23829,
					  "Set failpoint {failPointName} to: {failPoint}",
					  "Set failpoint",
					  "failPointName"_attr = failPointName,
					  "failPoint"_attr = failPoint->toBSON());

		*/
		auto& maxShardVersion = shardVersionIt->second.shardVersion;
		LOGV2(227512,
			"befor maxShardVersion xx 1: {changechunk}",
			"befor maxShardVersion xx 1",
			//ChunkManager::toString->RoutingTableHistory::toString
			"maxShardVersion"_attr = (shardVersionIt->second.shardVersion.toString()));

		if (maxShardVersion.isOlderThan(chunk->getLastmod())) {
              maxShardVersion = chunk->getLastmod();
              //const ChunkVersion oldVersion = chunk->getLastmod();
			  //shardVersionIt->second.shardVersion = oldVersion;
			  //shardVersionIt->second.shardVersion(oldVersion.majorVersion(),
               //                                      oldVersion.minorVersion(),
               //                                      oldVersion.epoch(),
                //                                     oldVersion.getTimestamp());
			  LOGV2(227512,
	          "maxShardVersion xx 1: {changechunk}",
	          "maxShardVersion xx 1",
	          //ChunkManager::toString->RoutingTableHistory::toString
	          "maxShardVersion"_attr = (maxShardVersion.toString()));

			  LOGV2(227512,
	          "maxShardVersion xx 2: {changechunk}",
	          "maxShardVersion xx 2",
	          //ChunkManager::toString->RoutingTableHistory::toString
	          "maxShardVersion"_attr = (shardVersionIt->second.shardVersion.toString()));
        }
	}
	LOGV2(227512,
	  "old chunk after createMerged 2: {changechunk}",
	  "old chunk after createMerged 2",
	  //ChunkManager::toString->RoutingTableHistory::toString
	  "changechunk"_attr = redact(this->toString()));
			LOGV2(227513,
	  "change chunk all createMerged 3: {changechunk}",
	  "change chunk all createMerged 3",
	  //ChunkManager::toString->RoutingTableHistory::toString
	  "changechunk"_attr = redact(changeChunkMap.toString()));

	for (const auto& mapnode : changeMCV) {
		auto newChunks = *(mapnode.second);
		//这里必须用old _chunkMap
		auto iter = oldChunkMap.find(mapnode.first);
		auto oldChunks = *(iter->second);

		//合并后的chunk全部放这里
		auto iter2 = _chunkMap.find(mapnode.first);
		auto updateChunkVectorPtr = std::make_shared<ChunkVector>();
		iter2->second = updateChunkVectorPtr;
		
		//iter->second = copyPtr;
        //mCV.insert(std::make_pair(iter->first, tmpPtr));
		//auto updateFullChunks = *copyPtr;
		
	    size_t chunkMapIndex = 0;
	    size_t changedChunkIndex = 0;
		updateChunkVectorPtr->reserve(oldChunks.size() + newChunks.size());
	    while (chunkMapIndex < oldChunks.size() || changedChunkIndex < newChunks.size()) {
	        if (chunkMapIndex >= oldChunks.size()) {
	            validateChunk(newChunks[changedChunkIndex], getVersion());
	            appendChunk(*updateChunkVectorPtr, newChunks[changedChunkIndex++]);
	            continue;
	        }

	        if (changedChunkIndex >= newChunks.size()) {
	            appendChunk(*updateChunkVectorPtr, oldChunks[chunkMapIndex++]);
	            continue;
	        }

	        auto overlap = oldChunks[chunkMapIndex]->getRange().overlaps(
	            newChunks[changedChunkIndex]->getRange());

	        if (overlap) {
	            auto& changedChunk = newChunks[changedChunkIndex++];
	            auto& chunkInfo = oldChunks[chunkMapIndex];

	            auto bytesInReplacedChunk = chunkInfo->getWritesTracker()->getBytesWritten();
	            changedChunk->getWritesTracker()->addBytesWritten(bytesInReplacedChunk);

	            validateChunk(changedChunk, getVersion());
	            appendChunk(*updateChunkVectorPtr, changedChunk);
	        } else {
	            appendChunk(*updateChunkVectorPtr, oldChunks[chunkMapIndex++]);
	        }
	    }
	}
	LOGV2(227512,
	  "update chunk createMerged 4: {updatechunk}",
	  "update chunk createMerged 4",
	  //ChunkManager::toString->RoutingTableHistory::toString
	  "updatechunk"_attr = (this->toString()));

    return;
}


void ChunkMap::createMerged(const ChunkMap& oldChunkMap,
    const std::vector<std::shared_ptr<ChunkInfo>>& changedChunks,
    bool isUpdate) {
	//auto oldChunkMapSize = totalChunksNum();

	
	//full new chunkInfo consturct
	if (!isUpdate) {
		makeNew(changedChunks);
	} else {
		makeUpdated(oldChunkMap._chunkMap, changedChunks);
	}
}

std::string ChunkMap::toString() const {
	StringBuilder sb;
	sb << "yang test 926 Chunks:\n";
	auto slot = 0;
	for (const auto& mapIt : _chunkMap) {
		sb << "\t @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@,[slot: "  << slot 
			<< "maxstring:" << (mapIt.first) << "] " << '\n'; 
	    auto second = *mapIt.second;
        for (auto it = second.begin(); it != second.end(); it++) {
        	sb << "\t" << (*it)->toString() << '\n'; //ChunkInfo::toString
        }
	}

	sb << "====Shard versions:\n";
	//auto& shardVersionMap = getShardVersion();
    for (const auto& entry : getShardVersion()) {
        sb << "\t" << entry.first << ": " << entry.second.shardVersion.toString() << '\n';
    }

    return sb.str();
}

BSONObj ChunkMap::toBSON() const {
    BSONObjBuilder builder;

    builder.append("startingVersion"_sd, getVersion().toBSON());
    builder.append("chunkCount", static_cast<int64_t>(_chunkMap.size()));

    {
        BSONArrayBuilder arrayBuilder(builder.subarrayStart("chunks"_sd));

		for (const auto& topIt : _chunkMap) {
			for (const auto& secondIt: *topIt.second) {
				arrayBuilder.append(secondIt->toString());
			}
		}
    }

    return builder.obj();
}

//ChunkMap::findIntersectingChunk  _overlappingBounds
//通过二分查找获取shardKey所在的chunk
std::shared_ptr<ChunkInfo> ChunkMap::_findIntersectingChunk(const BSONObj& shardKey,
																	   //默认bool isMaxInclusive = true
                                                                       bool isMaxInclusive) const {
    auto shardKeyString = ShardKeyPattern::toKeyString(shardKey);
	LOGV2(227511,
          "_findIntersectingChunk 1: {shardKeyString}",
          "_findIntersectingChunk 1",
          //ChunkManager::toString->RoutingTableHistory::toString
          "shardKeyString"_attr = _chunkMap.size());

	LOGV2(227512,
          "_findIntersectingChunk 1: {allChunks}",
          "_findIntersectingChunk 1",
          //ChunkManager::toString->RoutingTableHistory::toString
          "allChunks"_attr = this->toString());

	LOGV2(227513,
          "_findIntersectingChunk 1: {shardKey}",
          "_findIntersectingChunk 1",
          //ChunkManager::toString->RoutingTableHistory::toString
          "shardKey"_attr = str::stream() << shardKey);


    const auto it = _chunkMap.lower_bound(shardKeyString);

    if (it == _chunkMap.end()) {
		LOGV2(227511,
	          "_findIntersectingChunk 4: {shardKeyString}",
	          "_findIntersectingChunk 4",
	          //ChunkManager::toString->RoutingTableHistory::toString
	          "shardKeyString"_attr = redact(shardKeyString));
        //error
    }

	LOGV2(227514,
	          "_findIntersectingChunk 3: {mapIt}",
	          "_findIntersectingChunk 3",
	          //ChunkManager::toString->RoutingTableHistory::toString
	          "mapIt"_attr = str::stream() << it->first);
	const auto itSecond = *it->second;

	ChunkVector::const_iterator vectIt;
	//参考https://en.cppreference.com/w/cpp/algorithm/lower_bound
	//https://en.cppreference.com/w/cpp/algorithm/upper_bound
    if (!isMaxInclusive) { 
		//获取小于等于shardKeyString对应的第一个chunk
        vectIt = std::lower_bound(itSecond.begin(),
                                itSecond.end(),
                                shardKey,
                                [&shardKeyString](const auto& chunkInfo, const BSONObj& shardKey) {
                                    return chunkInfo->getMaxKeyString() < shardKeyString;
                                });
    } else {
    	//获取小于shardKeyString对应的第一个chunk
        vectIt = std::upper_bound(itSecond.begin(),
                                itSecond.end(),
                                shardKey,
                                [&shardKeyString](const BSONObj& shardKey, const auto& chunkInfo) {
                                    return shardKeyString < chunkInfo->getMaxKeyString();
                                });
    }

    if (vectIt != itSecond.end()) {
		LOGV2(227515,
	          "_findIntersectingChunk 2: {chunk}",
	          "_findIntersectingChunk 2",
	          //ChunkManager::toString->RoutingTableHistory::toString
	          "chunk"_attr = (*vectIt)->toString());
    	return *vectIt;
	} else {
		return std::shared_ptr<ChunkInfo>();
	}	
}

ChunkVector::const_iterator ChunkMap::_findIntersectingChunkInVector(const BSONObj& shardKey,
																	   std::shared_ptr<ChunkVector> vector,
																	   //默认bool isMaxInclusive = true
                                                                       bool isMaxInclusive) const {
    auto shardKeyString = ShardKeyPattern::toKeyString(shardKey);
	LOGV2(227511,
      "_findIntersectingChunkInVector 1: {chunk}",
      "_findIntersectingChunkInVector 1",
      //ChunkManager::toString->RoutingTableHistory::toString
      "chunk"_attr = "yang test begin");

	//参考https://tool.oschina.net/uploads/apidocs/cpp/en/cpp/algorithm/lower_boundhtml.html 源码实现
    if (!isMaxInclusive) { 
		//获取小于等于shardKeyString对应的第一个chunk
        return std::lower_bound(vector->begin(),
                                vector->end(),
                                shardKey,
                                [&shardKeyString](const auto& chunkInfo, const BSONObj& shardKey) {
                                    return chunkInfo->getMaxKeyString() < shardKeyString;
                                });
    } else {
    	//获取小于shardKeyString对应的第一个chunk
        return std::upper_bound(vector->begin(),
                                vector->end(),
                                shardKey,
                                [&shardKeyString](const BSONObj& shardKey, const auto& chunkInfo) {
                                    return shardKeyString < chunkInfo->getMaxKeyString();
                                });
    }
}


std::pair<MapChunkVector::const_iterator, MapChunkVector::const_iterator>
ChunkMap::_overlappingTopRanges(const mongo::BSONObj& min,
                                      const mongo::BSONObj& max,
                                      bool isMaxInclusive) const {
	auto minShardKeyString = ShardKeyPattern::toKeyString(min);
	LOGV2(227511,
      "_overlappingTopRanges 1: {chunk}",
      "_overlappingTopRanges 1",
      //ChunkManager::toString->RoutingTableHistory::toString
      "chunk"_attr = "yang test begin");
    const auto itMin = _chunkMap.lower_bound(minShardKeyString);
    const auto itMax = [this, &max, isMaxInclusive]() {
		auto maxShardKeyString = ShardKeyPattern::toKeyString(max);
        auto it = isMaxInclusive ? _chunkMap.upper_bound(maxShardKeyString)
                                 : _chunkMap.lower_bound(maxShardKeyString);
        return it == _chunkMap.end() ? it : ++it;
    }();
	
	LOGV2(227511,
          "_overlappingTopRanges 2: {chunk}",
          "_overlappingTopRanges 2",
          //ChunkManager::toString->RoutingTableHistory::toString
          "chunk"_attr = itMin->first);
	LOGV2(227511,
          "_overlappingTopRanges 2: {chunk}",
          "_overlappingTopRanges 2",
          //ChunkManager::toString->RoutingTableHistory::toString
          "chunk"_attr = (itMax->first));

    return {itMin, itMax};
}

//forEachOverlappingChunk
std::pair<ChunkVector::const_iterator, ChunkVector::const_iterator>
ChunkMap::_overlappingBounds(const BSONObj& min, const BSONObj& max, bool isMaxInclusive,
	std::shared_ptr<ChunkVector> vect) const {
	LOGV2(227511,
      "_overlappingBounds 1: {chunk}",
      "_overlappingBounds 1",
      //ChunkManager::toString->RoutingTableHistory::toString
      "chunk"_attr = "yang test begin");
    const auto itMin = _findIntersectingChunkInVector(min, vect);
    const auto itMax = [&]() {
        auto it = _findIntersectingChunkInVector(max, vect, isMaxInclusive);
        return it == vect->end() ? it : ++it;
    }();

	LOGV2(227511,
          "_overlappingBounds 2: {chunk}",
          "_overlappingBounds 2",
          //ChunkManager::toString->RoutingTableHistory::toString
          "chunk"_attr = (*itMin)->toString());
	LOGV2(227511,
          "_overlappingBounds 2: {chunk}",
          "_overlappingBounds 2",
          //ChunkManager::toString->RoutingTableHistory::toString
          "chunk"_attr = (*itMax)->toString());
    return {itMin, itMax};
}

